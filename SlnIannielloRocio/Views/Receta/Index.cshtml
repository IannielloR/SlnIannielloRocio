@model IEnumerable<SlnIannielloRocio.Models.Receta>
@{
    ViewData["Title"] = "Index Receta";
}
<div class="container">
@Html.ActionLink("Nuevo","Create","Receta")
</div>

<table class ="table container">
    <tr>
        <th>@Html.DisplayNameFor(model=>model.Titulo)</th>
        <th>@Html.DisplayNameFor(model=>model.Ingredientes)</th>
        <th>@Html.DisplayNameFor(model=>model.Instrucciones)</th>
        <th>@Html.DisplayNameFor(model=>model.Autor)</th>
        <th>@Html.DisplayNameFor(model=>model.Apellido)</th>
        <th>@Html.DisplayNameFor(model=>model.Edad)</th>
        <th>@Html.DisplayNameFor(model=>model.Email)</th>

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Titulo,"Details","Receta",new{id=item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.Ingredientes)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.Instrucciones)
            </td>
            <td>
                @Html.ActionLink(item.Autor, "DetailsByAutor", "Receta", new{autor = item.Autor})
            </td>
            <td>
                @Html.ActionLink(item.Apellido, "DetailsByApellido", "Receta", new{apellido = item.Apellido})
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.Email)
            </td>
            <td>
                @Html.ActionLink("Borrar", "Delete", "Receta", new {id = item.Id}, new{@class="btn btn-danger"})
                @Html.ActionLink("Editar", "Edit", "Receta", new {id = item.Id}, new{@class="btn btn-warning"})
            </td>           
        </tr>
    }
</table>

@section SideBar{ 
    @Html.ActionLink("Volver al index", "Index", "Receta")
}
